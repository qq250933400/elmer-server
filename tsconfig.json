{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": false,
        "emitDecoratorMetadata": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "allowJs": true,
        "checkJs": false,
        "module": "Node16",
        "moduleResolution": "Node16",
        "removeComments": false,
        "target": "ES2020",
        "lib": [
            "ES2020",
            "dom",
            "dom.iterable"
        ],
        "outDir": "./lib",
        "declaration": true,
        "declarationDir": "./lib",
        "strict": false,
        "esModuleInterop": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "linterOptions": {
        "exclude": [
            "**/node_modules/**",
            "**/bin/**"
        ]
    },
    "include": [
        "./src/**/*",
        "./app/**/*"
    ]
}